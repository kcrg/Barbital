<Shell x:Class="Barbital.Views.AppShellView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    xmlns:views="clr-namespace:Barbital.Views"
    prism:ViewModelLocator.AutowireViewModel="True"
    Shell.BackgroundColor="#008577"
    Shell.FlyoutBehavior="Disabled"
    Shell.ForegroundColor="White"
    Shell.TabBarBackgroundColor="#008577"
    Shell.TabBarDisabledColor="#00574B"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarUnselectedColor="#00574B"
    Shell.TitleColor="White"
    Visual="Material">
    <TabBar>
        <Tab Title="{Binding PlayerTabTitle}">
            <Tab.Icon>
                <FontImageSource
                    FontFamily="MDL2.ttf#MDL2"
                    Glyph="&#xEDB5;"
                    Size="64"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:PlayerView}"/>
        </Tab>

        <Tab Title="{Binding NewsTabTitle}">
            <Tab.Icon>
                <FontImageSource
                    FontFamily="MDL2.ttf#MDL2"
                    Glyph="&#xE7BC;"
                    Size="64"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate views:NewsListView}"/>
        </Tab>
    </TabBar>
</Shell>